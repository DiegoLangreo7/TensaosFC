---
export interface Props {
  data: {
    name?:    string;
    logo?:    string;
    website?: string;
  };
}
const { data } = Astro.props as Props;
const { name, logo, website } = data;
---

{ name && logo && website ? (
  <a
    href={website}
    target="_blank"
    rel="noopener"
    class="flex flex-col items-center p-4 bg-light dark:bg-darkmode-light rounded-lg hover:shadow-lg transition"
  >
    <img src={logo} alt={name} class="h-24 w-auto mb-4 object-contain" />
    <span class="font-semibold text-center">{name}</span>
  </a>
) : null }
