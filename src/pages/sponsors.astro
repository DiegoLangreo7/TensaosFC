---
import Base from "@/layouts/Base.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import SponsorCard from "@/components/SponsorCard.astro";

interface Sponsor {
  name: string;
  logo: string;
  website: string;
}

const sponsors = (await getCollection("sponsors")) as CollectionEntry<"sponsors">[];
---

<Base title="Patrocinadores" meta_title="Nuestros Patrocinadores">
  <section class="section-sm">
    <div class="container">
      <h2 class="text-h2 mb-8 text-center">Patrocinadores</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {sponsors.map((entry) => {
          const data = entry.data as Sponsor;
          return (
            <SponsorCard
              name={data.name}
              logo={data.logo}
              website={data.website}
            />
          );
        })}
      </div>
    </div>
  </section>
</Base>
